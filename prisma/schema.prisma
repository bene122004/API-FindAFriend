generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")  // A URL do banco de dados vem de uma vari√°vel de ambiente
}

model Pet {
  id        String   @id @default(uuid())
  name      String
  age       Int?
  size      String?
  color     String?
  city      String
  orgId     String
  org       Org      @relation(fields: [orgId], references: [id])
}

model Org {
  id        String   @id @default(uuid())
  name      String
  address   String
  whatsapp  String
  email     String   @unique
  password  String
  city      String
  pets      Pet[]
}
